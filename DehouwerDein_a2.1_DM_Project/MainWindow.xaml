            <materialDesign:PackIcon
    Kind="Plus"
    Height="24"
    Width="24" />
        </Button>

        <Button
            x:Name="btnGebruikers"
  Style="{StaticResource MaterialDesignFloatingActionAccentButton}"
  ToolTip="MaterialDesignFloatingActionAccentButton" Grid.Column="1" Margin="270.2,332,70.6,-44.8" Grid.Row="2" Grid.RowSpan="2" Click="btnGebruikers_Click">
