<Window x:Class="DehouwerDein_a2._1_DM_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DehouwerDein_a2._1_DM_Project"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}"
        Title="Nieuws Overzicht" Height="800" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="600"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Content="Nieuws Overzicht" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontSize="25" Margin="298,0,98.6,0.2"></Label>

        <materialDesign:PackIcon Kind="Search" Grid.Column="1" RenderTransformOrigin="23.8,1.548" Margin="308.2,5,0,0" Height="29" Width="40" />
        
        
        <!-- ItemsControl -->

        <DockPanel MaxHeight="900" Grid.ColumnSpan="2" Grid.RowSpan="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="icNieuwsOverzicht" Margin="50" Grid.ColumnSpan="2">

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2" ClipToBounds="False" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>

                <DataTemplate>

                    <DataTemplate.Resources>

                        <Style TargetType="TextBlock">
                            <Setter Property="FontSize" Value="18"/>
                            <!--<Setter Property="HorizontalAlignment" Value="Center"/>-->
                        </Style>
                    </DataTemplate.Resources>

                    <materialDesign:Card
  Width="300" Margin="30">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition
        Height="140" />
                                <RowDefinition
        Height="*" />
                                <RowDefinition
        Height="auto" />
                            </Grid.RowDefinitions>
                            <Image
                                  Source="{Binding cover}"
                                  Height="140"
                                  Width="196"
                                  Stretch="UniformToFill" />
                            <StackPanel
      Grid.Row="1"
      Margin="8 24 8 0">
                                <TextBlock
        FontWeight="Bold" Text="{Binding titel}">

                                </TextBlock>
                                <TextBlock
        TextWrapping="Wrap"
        VerticalAlignment="Center" Text="{Binding samenvatting}">

                                </TextBlock>
                            </StackPanel>
                            <StackPanel
      HorizontalAlignment="Right"
      Grid.Row="2"
      Orientation="Horizontal"
      Margin="8">
                                <Button
        Style="{StaticResource MaterialDesignToolButton}"
        Width="30"
        Padding="2 0 2 0"
        materialDesign:RippleAssist.IsCentered="True"/>

                            </StackPanel>
                                    <Button x:Name="btnLeesMeer"
    Style="{StaticResource MaterialDesignOutlinedButton}"
    ToolTip="{Binding id}" Tag="{Binding id}"  Margin="8,0,174,16" Grid.Row="2" Click="btnLeesMeer_Click">LEES MEER</Button>
                                    <materialDesign:PackIcon Name="btnBewerken" Tag="{Binding id}"
          Kind="Pencil" RenderTransformOrigin="0.29,-13.23" Margin="262,18,0,0" Height="28" Width="23" MouseDown="btnBewerken_MouseDown" Cursor="Hand" />
                                    
                                    <materialDesign:Chip x:Name="chipCategorie" Content="{Binding Categorie.naam}"  Margin="241,90,0,18" Grid.Row="1"  RenderTransformOrigin="1.552,0.581" Grid.RowSpan="2"/>
                        </Grid>
                    </materialDesign:Card>
                </DataTemplate>
            </ItemsControl.ItemTemplate>

        </ItemsControl>
    </ScrollViewer>
</DockPanel>


